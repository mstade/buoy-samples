<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
               xmlns:s="library://ns.adobe.com/flex/spark" 
               xmlns:mx="library://ns.adobe.com/flex/mx"
               xmlns="se.stade.buoy.examples.async_service_sample.*"
               minWidth="450" minHeight="300"
               fontSize="15">
    
    <fx:Declarations>
        <!--
        This context is a translation of the sample provided by Justin Moses
        in his UI mediation example. It re-uses only the domain logic from
        Justin's example, removing any RobotLegs related logic. 
        
        https://github.com/justinjmoses/mediate-behaviours-example
        -->
        <MediateBehaviorsContext autoAttach="{view}" />
    </fx:Declarations>
    
    
    <AsyncLoaderView id="view"
                     width="100%"
                     height="100%" />
    
</s:Application>